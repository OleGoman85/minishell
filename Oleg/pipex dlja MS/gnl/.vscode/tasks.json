{
    "tasks": [
        {
            "type": "shell",
            "label": "Build debug executable",
            "command": "cc",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-fsanitize=address,undefined,integer",
                "${workspaceFolder}/**/*.c",
                "-o",
                "${workspaceFolder}/debug.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}